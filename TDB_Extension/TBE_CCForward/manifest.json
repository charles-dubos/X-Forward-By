{
    "manifest_version": 2,
    "name": "CrystalClearForward",
    "description": "Extension to see and forward a message preserving its signature",
    "version": "1.0",
    "author": "C. DUBOS",
    "applications": {
        "gecko": {
            "id": "charles.dubos@telecom-paris.fr",
            "strict_min_version": "78.4"
        }
    },
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "message_display_action": {
        "browser_style": true,
        "default_title": "Relay Forward",
        "default_icon" : "images/relayFwd.png",
        "default_popup": "src/relayFwd.html"
    },
    "permissions": [
    "messagesRead",
    "messagesModify",
    "accountsRead"
    ],
    "icons": {
        "64": "images/fwd_signed.png",
        "32": "images/fwd_signed_32px.png",
        "16": "images/fwd_signed_16px.png"
    }
}


