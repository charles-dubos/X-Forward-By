{
    "manifest_version": 2,
    "name": "messageInfos",
    "description": "Extension to show the SMTP headers of a selected message",
    "version": "1.0",
    "author": "C. DUBOS",
    "applications": {
        "gecko": {
            "id": "charles.dubos@telecom-paris.fr",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_title": "Message Infos",
        "default_icon" : "images/msgInfo.png",
        "default_label": "",
        "default_popup": "src/msgInfo.html"
    },
    "message_display_action": {
        "default_title": "Message Infos",
        "default_icon" : "images/msgInfo.png",
        "default_popup": "src/msgInfo.html"
    },
    "permissions": [
        "messagesRead"
    ],
    "icons": {
        "64": "images/msgInfo.png",
        "32": "images/msgInfo_32px.png",
        "16": "images/msgInfo_16px.png"
    }
}
